pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Backend Setup') {
            steps {
                dir('backend') {
                    sh '''
                    if [ ! -d "venv" ]; then
                        python3 -m venv venv
                    fi
                    . venv/bin/activate
                    pip install -r requirements.txt
                    '''
                }
            }
        }

        stage('Frontend Setup') {
            steps {
                dir('frontend') {
                    sh 'npm install'
                }
            }
        }

        stage('Restart Applications') {
            steps {
                sh '''
                pm2 restart flask || pm2 start backend/app.py --name flask --interpreter backend/venv/bin/python
                pm2 restart express || pm2 start frontend/server.js --name express
                pm2 save
                '''
            }
        }
    }
}
