pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Ensure Backend Running') {
            steps {
                sh '''
                pm2 start backend/app.py \
                  --name flask \
                  --interpreter backend/venv/bin/python \
                  || true
                '''
            }
        }

        stage('Ensure Frontend Running') {
            steps {
                sh '''
                pm2 start frontend/server.js \
                  --name express \
                  || true
                '''
            }
        }

        stage('Restart Applications') {
            steps {
                sh '''
                pm2 restart flask
                pm2 restart express
                '''
            }
        }

        stage('Save PM2 State') {
            steps {
                sh 'pm2 save'
            }
        }
    }
}
