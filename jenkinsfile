pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Restart Backend') {
            steps {
                sh '''
                pm2 describe flask >/dev/null 2>&1 \
                  && pm2 restart flask \
                  || echo "Flask process not found"
                '''
            }
        }

        stage('Restart Frontend') {
            steps {
                sh '''
                pm2 describe express >/dev/null 2>&1 \
                  && pm2 restart express \
                  || echo "Express process not found"
                '''
            }
        }

        stage('Save PM2 State') {
            steps {
                sh 'pm2 save'
            }
        }
    }
}
